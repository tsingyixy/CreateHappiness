<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diamond_game_bg"
    android:gravity="center_horizontal|bottom" >

    <LinearLayout
        android:id="@+id/select_mode_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="75dp"
        android:paddingLeft="4dp" >

        <TextView
            android:id="@+id/nick_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:text="@string/dick_nick_name"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <Button
            android:id="@+id/teamwork_mode_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:background="@drawable/teamwork_btn_selector" />

        <Button
            android:id="@+id/pk_mode_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pk_btn_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/first_login_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >
    </LinearLayout>

</LinearLayout>